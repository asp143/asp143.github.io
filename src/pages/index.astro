  <script>
    import { animate, inView, stagger, spring } from "https://cdn.jsdelivr.net/npm/motion@12/+esm";

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    if (!prefersReducedMotion) {
      // Hero: Stagger letters in
      const heroLetters = document.querySelectorAll('.hero-name-letter');
      animate(
        heroLetters,
        { opacity: [0, 1], transform: ['translateY(100%)', 'translateY(0)'] },
        { duration: 0.6, delay: stagger(0.05), easing: [0.16, 1, 0.3, 1] }
      );

      // Hero subtitle + scroll indicator fade in after name
      const heroFades = document.querySelectorAll('.hero .motion-fade');
      animate(
        heroFades,
        { opacity: [0, 1], transform: ['translateY(20px)', 'translateY(0)'] },
        { duration: 0.8, delay: stagger(0.15, { start: 0.8 }), easing: [0.16, 1, 0.3, 1] }
      );

      // Fade out scroll indicator on scroll + scroll dot animation
      const scrollIndicator = document.querySelector('.hero-scroll') as HTMLElement | null;
      const scrollDot = document.querySelector('.scroll-dot') as HTMLElement | null;
      const heroPeriod = document.querySelector('.hero-period') as HTMLElement | null;
      const contactPeriod = document.querySelector('.contact-period') as HTMLElement | null;
      const hero = document.querySelector('.hero') as HTMLElement | null;
      const sections = document.querySelectorAll('.section');

      if (scrollDot && hero && sections.length) {
        // === State Machine ===
        type DotState = 'hidden' | 'falling' | 'bouncing' | 'resting' | 'detached';
        let state: DotState = 'hidden';
        let currentIndex = -1;
        let ticking = false;
        let isRolled = false;
        let rollTimeoutA: ReturnType<typeof setTimeout> | null = null;
        let rollTimeoutB: ReturnType<typeof setTimeout> | null = null;
        let heroReturnTimeout: ReturnType<typeof setTimeout> | null = null;

        const DETACH_THRESHOLD = 60;
        const DOT_SIZE = 10;
        const DOT_RADIUS = DOT_SIZE / 2;
        const DOT_SIDE_GAP = 12;

        function getDotTarget(index: number): { x: number, y: number } {
          const section = sections[index] as HTMLElement;
          const marker = section?.querySelector('.dot-target') as HTMLElement | null;
          if (marker) {
            const rect = marker.getBoundingClientRect();
            // Compensate for any in-flight motion-fade transform on the heading
            const heading = marker.closest('.section-heading, .contact-cta') as HTMLElement | null;
            let transformY = 0;
            if (heading) {
              const t = getComputedStyle(heading).transform;
              if (t && t !== 'none') {
                transformY = new DOMMatrix(t).m42;
              }
            }
            return {
              x: rect.right + DOT_SIDE_GAP + DOT_RADIUS,
              y: rect.top - transformY + rect.height * 0.5 - DOT_RADIUS
            };
          }
          const dotRect = scrollDot.getBoundingClientRect();
          return { x: dotRect.left + dotRect.width / 2, y: dotRect.top };
        }

        function getActiveIndex(): number {
          let active = 0;
          sections.forEach((section, i) => {
            const heading = (section as HTMLElement).querySelector('.dot-target') as HTMLElement | null;
            if (heading) {
              if (heading.getBoundingClientRect().top <= window.innerHeight) {
                active = i;
              }
            } else {
              // Fallback for sections without a .dot-target marker: triggers on section top edge.
              // NOTE: fires slightly earlier than the .dot-target path above.
              if (window.scrollY + window.innerHeight >= (section as HTMLElement).offsetTop) {
                active = i;
              }
            }
          });
          return Math.min(active, sections.length - 1);
        }

        function clearStateClasses() {
          scrollDot.classList.remove(
            'scroll-dot--falling', 'scroll-dot--detached',
            'scroll-dot--rolling', 'scroll-dot--settled'
          );
        }

        function resetRolling() {
          if (rollTimeoutA) { clearTimeout(rollTimeoutA); rollTimeoutA = null; }
          if (rollTimeoutB) { clearTimeout(rollTimeoutB); rollTimeoutB = null; }
          if (isRolled) {
            isRolled = false;
            scrollDot.classList.remove('scroll-dot--rolling', 'scroll-dot--settled');
            scrollDot.style.left = '';
            scrollDot.style.transform = 'translateX(-50%)';
            scrollDot.style.opacity = '';
            if (contactPeriod) contactPeriod.style.opacity = '';
          }
        }

        function clearHeroReturnTimeout() {
          if (heroReturnTimeout) {
            clearTimeout(heroReturnTimeout);
            heroReturnTimeout = null;
          }
        }

        function startFall(targetIndex: number) {
          state = 'falling';
          currentIndex = targetIndex;

          if (targetIndex < sections.length - 1) resetRolling();

          clearStateClasses();
          scrollDot.classList.add('scroll-dot--falling');

          // Force reflow so transition triggers from current position
          void scrollDot.offsetHeight;

          const target = getDotTarget(targetIndex);
          const currentTop = scrollDot.getBoundingClientRect().top;
          const fallDistance = Math.abs(target.y - currentTop);
          const fallDurationMs = Math.min(500, Math.max(220, 160 + fallDistance * 0.65));
          scrollDot.style.setProperty('--dot-fall-duration', `${fallDurationMs}ms`);

          scrollDot.style.top = `${target.y}px`;
          scrollDot.style.left = `${target.x}px`;
          scrollDot.style.transform = 'translateX(-50%)';
        }

        // Fall complete → snap to precise landing point
        scrollDot.addEventListener('transitionend', (e) => {
          if (e.propertyName !== 'top' || state !== 'falling') return;

          const landedTarget = getDotTarget(currentIndex);
          scrollDot.classList.remove('scroll-dot--falling');
          scrollDot.style.top = `${landedTarget.y}px`;
          scrollDot.style.left = `${landedTarget.x}px`;
          scrollDot.style.transform = 'translateX(-50%)';

          // Contact section: roll into period after a short settle
          const isLastSection = currentIndex === sections.length - 1;
          if (isLastSection && contactPeriod) {
            state = 'bouncing';
            rollTimeoutA = setTimeout(() => {
              const periodRect = contactPeriod.getBoundingClientRect();
              const periodCenterX = periodRect.left + periodRect.width / 2;
              const periodCenterY = periodRect.top + periodRect.height / 2;

              scrollDot.classList.add('scroll-dot--rolling');
              scrollDot.style.left = `${periodCenterX}px`;
              scrollDot.style.top = `${periodCenterY}px`;
              scrollDot.style.transform = 'translate(-50%, -50%)';

              rollTimeoutB = setTimeout(() => {
                scrollDot.classList.add('scroll-dot--settled');
                scrollDot.style.opacity = '0';
                if (contactPeriod) contactPeriod.style.opacity = '1';
                isRolled = true;
                state = 'resting';
              }, 550);
            }, 120);
            return;
          }

          state = 'resting';
          clearStateClasses();
        });

        const onScroll = () => {
          if (ticking) return;
          ticking = true;

          requestAnimationFrame(() => {
            const scrollY = window.scrollY;
            const heroBottom = hero.offsetHeight * 0.7;

            // Fade scroll indicator
            if (scrollIndicator) {
              const fade = Math.max(1 - scrollY / (window.innerHeight * 0.3), 0);
              scrollIndicator.style.opacity = String(fade);
            }

            // === HIDDEN: in hero area ===
            if (scrollY <= heroBottom) {
              if (state !== 'hidden') {
                clearHeroReturnTimeout();
                resetRolling();
                clearStateClasses();

                if (heroPeriod) {
                  const heroRect = heroPeriod.getBoundingClientRect();
                  const heroCenterX = heroRect.left + heroRect.width / 2;
                  const heroCenterY = heroRect.top + heroRect.height / 2;

                  heroPeriod.style.opacity = '0';
                  scrollDot.classList.add('scroll-dot--visible', 'scroll-dot--rolling');
                  scrollDot.style.left = `${heroCenterX}px`;
                  scrollDot.style.top = `${heroCenterY}px`;
                  scrollDot.style.transform = 'translate(-50%, -50%)';
                  scrollDot.style.opacity = '1';

                  heroReturnTimeout = setTimeout(() => {
                    scrollDot.classList.remove('scroll-dot--visible', 'scroll-dot--rolling');
                    scrollDot.style.opacity = '';
                    scrollDot.style.left = '';
                    scrollDot.style.transform = '';
                    scrollDot.style.top = '60px';
                    heroPeriod.style.opacity = '1';
                    heroReturnTimeout = null;
                  }, 360);
                } else {
                  scrollDot.classList.remove('scroll-dot--visible');
                  scrollDot.style.left = '';
                  scrollDot.style.transform = '';
                  scrollDot.style.top = '60px';
                }

                state = 'hidden';
                currentIndex = -1;
                if (contactPeriod) contactPeriod.style.opacity = '';
              }
              ticking = false;
              return;
            }

            // Past hero — show dot
            clearHeroReturnTimeout();
            scrollDot.classList.add('scroll-dot--visible');
            if (heroPeriod) heroPeriod.style.opacity = '0';

            const activeIndex = getActiveIndex();

            // === HIDDEN → first fall (with delay for visibility) ===
            if (state === 'hidden') {
              scrollDot.style.top = `${DETACH_THRESHOLD}px`;
              const initTarget = getDotTarget(activeIndex);
              scrollDot.style.left = `${initTarget.x}px`;
              scrollDot.style.transform = 'translateX(-50%)';
              void scrollDot.offsetHeight;

              // Brief delay so dot is visible before falling
              state = 'detached';
              currentIndex = activeIndex;
              clearStateClasses();
              scrollDot.classList.add('scroll-dot--detached');

              requestAnimationFrame(() => {
                if (state === 'detached') {
                  startFall(activeIndex);
                }
              });
              ticking = false;
              return;
            }

            // === RESTING: non-sticky, only detach/fall checks ===
            if (state === 'resting' && !isRolled) {
              const target = getDotTarget(currentIndex);

              if (target.y < DETACH_THRESHOLD) {
                state = 'detached';
                clearStateClasses();
                scrollDot.classList.add('scroll-dot--detached');
                void scrollDot.offsetHeight;
                scrollDot.style.top = `${DETACH_THRESHOLD}px`;
              }

              if (state === 'resting' && activeIndex !== currentIndex) {
                startFall(activeIndex);
              }
            }

            // === RESTING (rolled): handle scroll-back from contact ===
            else if (state === 'resting' && isRolled) {
              if (activeIndex < currentIndex) {
                resetRolling();
                startFall(activeIndex);
              }
            }

            // === DETACHED: wait for next section ===
            else if (state === 'detached') {
              const prevIndex = currentIndex;
              const nextIndex = currentIndex + 1;

              if (nextIndex < sections.length && activeIndex >= nextIndex) {
                startFall(nextIndex);
              } else {
                // Only check re-attach if we did NOT start a fall
                const reattachTarget = getDotTarget(prevIndex);
                if (reattachTarget.y >= DETACH_THRESHOLD) {
                  state = 'resting';
                  clearStateClasses();
                  scrollDot.style.top = `${reattachTarget.y}px`;
                  scrollDot.style.left = `${reattachTarget.x}px`;
                  scrollDot.style.transform = 'translateX(-50%)';
                }
              }
            }

            // === FALLING: redirect if section changed mid-fall ===
            else if (state === 'falling') {
              if (activeIndex !== currentIndex) {
                startFall(activeIndex);
              }
            }

            ticking = false;
          });
        };

        window.addEventListener('scroll', onScroll, { passive: true });
      } else if (scrollIndicator) {
        // Fallback: just fade the scroll indicator
        window.addEventListener('scroll', () => {
          const fade = Math.max(1 - window.scrollY / (window.innerHeight * 0.3), 0);
          scrollIndicator.style.opacity = String(fade);
        }, { passive: true });
      }

      // Section headers: fade in on scroll
      document.querySelectorAll('.section').forEach((section) => {
        inView(section, () => {
          const fades = section.querySelectorAll('.motion-fade');
          animate(
            fades,
            { opacity: [0, 1], transform: ['translateY(20px)', 'translateY(0)'] },
            { duration: 0.6, delay: stagger(0.1), easing: [0.16, 1, 0.3, 1] }
          );
        }, { amount: 0.1 });
      });

      // Staggered list items: project rows, writing rows, focus items, contact links
      document.querySelectorAll('.section').forEach((section) => {
        inView(section, () => {
          const items = section.querySelectorAll('.motion-stagger');
          animate(
            items,
            { opacity: [0, 1], transform: ['translateY(16px)', 'translateY(0)'] },
            { duration: 0.5, delay: stagger(0.06), easing: [0.16, 1, 0.3, 1] }
          );
        }, { amount: 0.05 });
      });
    } else {
      // Reduced motion: just show everything
      document.querySelectorAll('.motion-fade, .motion-letter, .motion-stagger').forEach((el) => {
        (el as HTMLElement).style.opacity = '1';
        (el as HTMLElement).style.transform = 'none';
      });
    }
  </script>
</BaseLayout>
