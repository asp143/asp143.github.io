---
import '../styles/global.css';

const {
  title = 'Ralph Jonas Mungcal',
  description = 'Full-Stack Developer & AI Integration Specialist building scalable platforms, automation systems, and AI-enabled products.'
} = Astro.props;

const schemaOrgWebPage = {
  '@context': 'http://schema.org',
  '@type': 'WebPage',
  url: 'https://ralphjonas.com',
  headline: 'Creating Amazing things to improve the quality of life',
  inLanguage: 'en',
  mainEntityOfPage: 'https://ralphjonas.com',
  description,
  name: title,
  author: {
    '@type': 'Person',
    name: 'Ralph Jonas Mungcal'
  },
  copyrightHolder: {
    '@type': 'Person',
    name: 'Ralph Jonas Mungcal'
  },
  copyrightYear: '2019',
  creator: {
    '@type': 'Person',
    name: 'Ralph Jonas Mungcal'
  },
  publisher: {
    '@type': 'Person',
    name: 'Ralph Jonas Mungcal'
  },
  datePublished: '2019-01-17',
  dateModified: '2022-02-27',
  image: {
    '@type': 'ImageObject',
    url: 'https://ralphjonas.com/logo.png'
  }
};

const breadcrumb = {
  '@context': 'http://schema.org',
  '@type': 'BreadcrumbList',
  description: 'Breadcrumbs list',
  name: 'Breadcrumbs',
  itemListElement: [
    {
      '@type': 'ListItem',
      item: {
        '@id': 'https://ralphjonas.com',
        name: 'Homepage'
      },
      position: 1
    }
  ]
};
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <link rel="apple-touch-icon" href="/favicons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png" />
    <link rel="shortcut icon" href="/favicon.ico" />

    <meta name="gatsby-starter" content="Gatsby Starter Portfolio Cara" />
    <meta name="msapplication-TileColor" content="#a0d8f1" />
    <meta name="msapplication-config" content="/browserconfig.xml" />
    <meta name="description" content={description} />
    <meta name="image" content="https://ralphjonas.com/logo.png" />

    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="ralphmungcal" />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://ralphjonas.com/logo.png" />
    <meta property="og:image:alt" content={description} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@ItsRalphSenpai" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://ralphjonas.com/logo.png" />
    <meta name="twitter:image:alt" content={description} />

    <meta name="theme-color" content="#6574cd" />
    <link rel="manifest" href="/manifest.webmanifest" crossorigin="anonymous" />

    <script type="application/ld+json" set:html={JSON.stringify(schemaOrgWebPage)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumb)}></script>
  </head>
  <body>
    <slot />
  </body>
</html>
